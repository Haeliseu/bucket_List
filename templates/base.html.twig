<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Bienvenue!{% endblock %}</title>
    <link rel="icon" href="{{ asset('img/favicon.png') }}">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<header>

    <nav>
        <ul>
            <h1>
                <li><img src="{{ asset("img/logo.png") }}">
                    Bucket-List
                </li>
            </h1>
            <h2>
                <li><a href="{{ path("index_main") }}" title="Home">Home</a></li>
                <li> | <a href="{{ path("wish_list") }}" title="List">List</a></li>
                <li> | <a href="{{ path("wish_add") }}" title="Add Yours!">Add Yours!</a></li>
                <li> | <a href="{{ path("main_aboutus") }}" title="About us"> About us</a></li>
            </h2>
        </ul>
    </nav>

</header>

<main>
    {% for label, messages in app.flashes%}
        {% for message in messages %}
        <div class="alert-{{ label }}">
            {{ message }}
            </div>{% endfor%}{% endfor%}
    {% block main %}{% endblock %}
</main>

<footer>Â©Bucket List 2023</footer>
</body>
</html>
